generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String?  // Optional for OAuth users
  name          String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime @default(now())
  books         Book[]
  providers     ProviderConfig[]
  accounts      Account[]
  sessions      Session[]
  oracleDecisions OracleDecision[]
  marketResearches MarketResearch[]
  
  // Tiered Access Fields
  planType         String    @default("free") // free, indie, pro
  credits          Int       @default(1)      // Books generation credits
  creditsResetDate DateTime?
  language         String    @default("es")
  
  // Profile Fields
  bio              String?
  website          String?
  authorName       String?  // Name to appear on covers
  coverStyle       String?  @default("minimal") // minimal, studio, office, etc.
  twitter          String?
  instagram        String?
  linkedin         String?
  facebook         String?
  tiktok           String?

  @@map("users")
}

model Book {
  id          String   @id @default(cuid())
  userId      String
  
  // Contenido
  title       String
  subtitle    String?
  description String 
  category    String
  
  // Legacy support or mixed
  genre         String?
  seoKeywords   String?  // Comma separated keywords (Legacy/SEO mapping)
  seoDescription String? // Meta description
  coverImageUrl String?
  coverRegenCount Int      @default(0)
  status        String   @default("draft") // draft or completed
  wordCount     Int?     @default(0)

  // Visuals
  theme         String   @default("swiss_master")
  layout        String   @default("standard")
  
  // Generación v2
  generationMode    String  @default("autopilot") // 'autopilot' | 'manual'
  researchData      Json?   // Datos de investigación de Gemini
  seoData           Json?   // Keywords, volumen, competencia
  
  // Proveedores usados
  textProvider      String?  // 'deepseek' | 'openai'
  imageProvider     String?  // 'banana_pro' | 'dalle3'
  correctionProvider String @default("openai")
  grammarProvider    String @default("gemini")
  humanizationProvider String @default("chatgpt")
  
  // Quality metrics
  qualityScore      Float?
  readabilityScore  Float?
  seoScore          Float?
  
  // Assets
  covers            Json?    // URLs de las 5 variantes
  mockups           Json?    // URLs de mockups
  copywriting       Json?    // Textos de marketing
  
  // Distribution
  platformMetadata  Json?    // Metadata por plataforma
  publishedPlatforms Json? // ['amazon', 'apple', ...]
  
  // Financiero
  estimatedCost     Float?
  actualCost        Float?
  generationTime    Int?     // segundos
  
  chapters  Chapter[]
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Relations preserved from previous schema
  exportSettings ExportSettings?
  integrations  MarketplaceIntegration[]
  oracleDecisions OracleDecision[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  @@index([userId, generationMode])
  @@index([category])
  @@map("books")
}

model Chapter {
  id          String   @id @default(cuid())
  bookId      String
  number      Int
  title       String
  content     String 
  
  // Legacy / Basic support
  imageUrl      String?
  imageRegenCount Int    @default(0)

  // Imágenes v2
  images      Json?     // Array de URLs de imágenes del capítulo
  imagePrompts Json?    // Prompts usados
  imageTypes  Json? // ['food', 'lifestyle', 'diagram']
  imageProvider String? // Provider usado para ESTE capítulo
  
  // Quality tracking
  rawContent       String? 
  correctedContent String? 
  grammarChecked   Boolean  @default(false)
  humanized        Boolean  @default(false)
  
  // SEO
  seoKeywords Json?
  
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([bookId, number])
  @@map("chapters")
}

model ProviderConfig {
  id           String   @id @default(cuid())
  userId       String
  provider     String   // openai, anthropic, gemini, openrouter, stability, etc
  apiKey       String
  category     String   // text_generation, grammar, humanization, image_generation, design
  priority     Int      @default(0) // Lower number = higher priority for fallback
  isActive     Boolean  @default(true)
  modelName    String?  // For providers with multiple models (e.g., openrouter, replicate)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider, category, modelName])
  @@index([userId])
  @@index([userId, category, priority])
  @@map("provider_configs")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model ExportSettings {
  id        String   @id @default(cuid())
  bookId    String   @unique
  format    String?  // pdf, epub, docx
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  copywritingData String? // JSON storing generated copy
  updatedAt DateTime @updatedAt
}

model MarketplaceIntegration {
  id        String   @id @default(cuid())
  bookId    String
  platform  String   // amazon-kdp, gumroad, etc
  status    String   @default("not_connected") // connected, published
  link      String?
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([bookId, platform])
}

model OracleDecision {
  id              String   @id @default(cuid())
  userId          String
  bookId          String?
  
  // Decisión
  phase           String   // 'research' | 'generation' | 'quality' | 'assets'
  task            String   // 'text' | 'image' | 'cover' | 'mockup' | etc
  selectedProvider String
  reason          String 
  
  // Context
  inputData       Json
  outputData      Json?
  
  // Performance
  responseTime    Int      // ms
  success         Boolean
  errorMessage    String? 
  
  // Cost
  estimatedCost   Float
  actualCost      Float?
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book      Book?    @relation(fields: [bookId], references: [id], onDelete: SetNull)

  timestamp DateTime @default(now())
  
  @@index([userId, phase])
  @@index([bookId])
  @@index([timestamp])
  @@map("oracle_decisions")
}

model MarketResearch {
  id              String   @id @default(cuid())
  userId          String
  
  // Research data
  query           String
  niche           String
  keywords        Json?
  searchVolume    Int
  competition     String   // 'low' | 'medium' | 'high'
  trendScore      Float
  
  // Analysis
  monetizationPotential Float
  recommendedAction String
  confidence        Float
  
  // Source
  provider        String   @default("gemini")
  rawData         Json
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  timestamp DateTime @default(now())
  
  @@index([userId])
  @@index([niche])
  @@map("market_research")
}
